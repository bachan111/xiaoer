<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bachan.xiaoer">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/xiaoer"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/xiaoer_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Xiaoer.NoActionBar">
        <activity android:name=".notepd.ui.RecordActivity"></activity>
        <activity android:name=".notepd.ui.NotepadActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>